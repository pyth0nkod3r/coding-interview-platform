// This is your Prisma schema file for SQLite (local development & testing)
// For PostgreSQL (Docker/production), use schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      String   // 'interviewer' | 'candidate'
  
  // Relations
  sessionsAsInterviewer Session[] @relation("Interviewer")
  sessionsAsCandidate   Session[] @relation("Candidate")
  messages              Message[]
  notes                 Note[]
}

model Session {
  id            String   @id @default(uuid())
  interviewerId String
  candidateId   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  status        String   @default("active") // 'active' | 'ended'
  
  // CodeState
  code          String   @default("// Start coding here...")
  language      String   @default("javascript")
  
  // Permissions
  canCandidateRun   Boolean @default(true)
  canCandidateType  Boolean @default(true)
  canRequestVideo   Boolean @default(true)
  
  interviewer   User     @relation("Interviewer", fields: [interviewerId], references: [id])
  candidate     User?    @relation("Candidate", fields: [candidateId], references: [id])
  
  questions     Question[]
  messages      Message[]
  notes         Note[]
}

model Question {
  id        String   @id @default(uuid())
  sessionId String
  title     String
  content   String
  createdAt DateTime @default(now())
  
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Message {
  id        String   @id @default(uuid())
  sessionId String
  senderId  String
  content   String
  timestamp DateTime @default(now())
  // Storing senderRole and senderName in DB is redundant if we have relation to User,
  // but for historical accuracy if user changes name, might be worth keeping. 
  // However, for simplicity and normaliztion, relying on relation.
  // The API response types include senderName/Role, which we can fetch from the include.
  
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sender    User     @relation(fields: [senderId], references: [id])
}

model Note {
  id        String @id @default(uuid())
  sessionId String
  userId    String
  content   String
  
  session   Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id])
  
  @@unique([sessionId, userId])
}
